[Unit]
Description=EMSI Evoleo Backend
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/emsi-evoleo/backend
Environment="PATH=/var/www/emsi-evoleo/backend/venv/bin"
ExecStart=/var/www/emsi-evoleo/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always

[Install]
WantedBy=multi-user.target
